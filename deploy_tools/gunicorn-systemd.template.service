[Unit]
Description=Gunicorn server for SITENAME

[Service]
Restart=on-failure
User=stcstores
WorkingDirectory=/home/stcstores/sites/SITENAME/source
ExecStart=/home/stcstores/sites/SITENAME/.venv/bin/gunicorn \
    --timeout=300 --workers=5 --bind unix:/tmp/SITENAME.socket \
    stcadmin.wsgi:application

[Install]
WantedBy=multi-user.target
